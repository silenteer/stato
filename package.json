{
  "name": "@silenteer/stato",
  "version": "1.2.1",
  "description": "Maybe a simpler all-purpose (but mostly frontend) state machine",
  "author": "Lagz0ne <duke@silentium.io>",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.5",
    "@types/react": "^18.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "jsdom": "^24.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "standard-version": "^9.5.0",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "radix3": "^1.1.2"
  },
  "scripts": {
    "dev": "tsup --watch",
    "test": "vitest run",
    "build": "tsup",
    "preview": "standard-version --path . --dry-run -t stato",
    "bump": "yarn run build && yarn run standard-version --path . -t stato",
    "release": "git push --follow-tags origin master && npm publish --access public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "minify": false,
    "treeshake": false,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "package.json",
    "src",
    "tsconfig.json"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "typescript": "^5.4.0"
  },
  "packageManager": "yarn@4.3.0"
}
